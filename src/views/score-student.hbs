<div class="main-container d-flex">
        {{>sidebar-student}}

              <div class="content container mt-1" style="min-height: 100vh; width: 100%;">
            <div class="col-md-12 fs-2 p-2 text-white text-center rounded mb-4" style="background: #f8c4d9; box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;">Score</div>
            <form action="/student-scores" class="container" method="post">
                <div class="row justify-content-around">
                    <label class="col-1" for="semester">Semester:</label>
                    <select class="col-1" name="semester" id="semester">
                        <option value="Học kỳ 1">1</option>
                        <option value="Học kỳ 2">2</option>
                        <option value="all">All</option>
                    </select>
                    <div class="col-3"></div>
                    <label class="col-1" for="year">Year:</label>
                    <select class="col-1" name="year" id="year">
                        <option value="2019-2020">2020</option>
                        <option value="2020-2021">2021</option>
                        <option value="2021-2022">2022</option>
                    </select>
                </div>
                <div class="row my-5 justify-content-center">   
                    <button class="btn col-1" style="background: #f8c4d9; box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;" type="submit">Show</button>
                </div>
            </form>
           
            <table id="example" class="table table-striped rounded" style="width:100%; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>15-min</th>
                        <th>45-min</th>
                        <th>Semester Final Test</th>
                        <th>Average</th>
                        <th>Semester</th>
                        <th>Year School</th>
                    </tr>
                </thead>
                <tbody>
                {{#each scoresArr}}
                    <tr>
                        <td>{{this.tenMH}}</td>
                        <td>{{this.diem15}}</td>
                        <td>{{this.diem45}}</td>
                        <td>{{this.diemHK}}</td>
                        <td>{{this.diemtk}}</td>
                        <td>{{this.tenHK}}</td>
                        <td>{{this.tenNH}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            
        </div>
</div>
<script>
          $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
